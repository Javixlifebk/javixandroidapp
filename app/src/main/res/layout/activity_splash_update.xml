<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SplashActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginTop="50dp"
                android:layout_gravity="center"
                android:elevation="7dp"
                android:src="@drawable/new_logo" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:src="@drawable/casual_life_3d_doctors_in_lab_coats"/>




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Offline Mode"
                android:textSize="20dp"
                android:fontFamily="@font/roboto_medium"
                android:textFontWeight="700"
                android:textColor="@color/black"/>

            <Switch
                android:layout_marginTop="@dimen/ten"
                android:id="@+id/swOffline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:thumbTint="@color/teal_700"
                android:trackTint="@color/colorPrimaryDark"
                />



        </LinearLayout>

        <LinearLayout
            android:id="@+id/Lin_bottom_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/roboto_medium"
                android:textFontWeight="700"
                android:textSize="10dp"
                android:textColor="@color/apptheme_txt_color"
                android:text="@string/version"/>
            <Button
                android:id="@+id/bottom_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/app_theme_round_button"
                android:textColor="@color/white"
                android:layout_marginHorizontal="30dp"
                android:fontFamily="@font/roboto_medium"
                android:textFontWeight="700"
                android:textAllCaps="false"
                android:layout_margin="20dp"
                android:textSize="13dp"
                android:text="Get Started"/>

        </LinearLayout>
    </LinearLayout>





</RelativeLayout>




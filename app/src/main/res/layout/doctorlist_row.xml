<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
 >

      <androidx.cardview.widget.CardView
          xmlns:app="http://schemas.android.com/apk/res-auto"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:cardBackgroundColor="@color/white"
          app:cardCornerRadius="8dp"
          app:cardElevation="2dp"
          app:cardMaxElevation="2dp"
          app:cardPreventCornerOverlap="true"
          app:cardUseCompatPadding="true"
          >
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:padding="10px"
             >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical"
                   android:weightSum="2">
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginRight="10dp"
                      android:layout_weight="2"
                      android:orientation="horizontal">

                     <TextView
                         android:layout_width="0dip"
                         android:layout_weight="1"
                         android:layout_height="wrap_content"
                         android:text="Doctor Titel"
                         android:layout_gravity="left"
                         android:id="@+id/ngoListRow_name"
                         android:textColor="#1A90ED"
                         android:drawablePadding="8dp"
                         android:drawableLeft="@drawable/male_icon"
                         android:textSize="18sp"/>
                     <ImageView
                         android:layout_width="20dp"
                         android:layout_height="20dp"
                         android:src="@drawable/online"
                         android:gravity="right"
                         android:layout_gravity="right"
                         android:id="@+id/isOnline"
                         android:textColor="#669AC3"
                         />
                     <Space
                         android:layout_width="15dp"
                         android:layout_height="10dp" />
                  </LinearLayout>
               </LinearLayout>


               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical"
                   android:weightSum="2">
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginRight="10dp"
                      android:layout_weight="2"
                      android:orientation="vertical">
                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_weight="1"
                         android:layout_height="wrap_content"
                         android:id="@+id/txSpecialization"
                         android:text="Specialization"
                         android:textColor="@color/colorOrange"
                         android:textSize="13sp"
                         android:drawablePadding="8dp"
                         android:drawableLeft="@drawable/ic_baseline_work_18"

                         />

                     <Space
                         android:layout_width="15dp"
                         android:layout_height="15dp" />
                  </LinearLayout>
               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical"
                   android:weightSum="2">
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginRight="10dp"
                      android:layout_weight="2"
                      android:orientation="horizontal">
                     <TextView
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:text=" Address"
                         android:id="@+id/ngoListRow_address"
                         android:textColor="#6A756A"
                         android:textSize="15sp"
                         android:drawablePadding="8dp"
                         android:drawableLeft="@android:drawable/ic_menu_directions"
                         />

                     <Space
                         android:layout_width="15dp"
                         android:layout_height="10dp" />
                  </LinearLayout>

               </LinearLayout>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_weight="1"
                   android:layout_height="wrap_content"
                   android:id="@+id/ngoListRow_ngoMobileNo"
                   android:text="call:xxxxxxxxxx"
                   android:textColor="#114898"
                   android:textSize="16sp"
                   android:drawablePadding="8dp"
                   android:layout_gravity="right"
                   android:gravity="right"
                   android:drawableLeft="@drawable/ic_phone_black_18dp"
                   />
            </LinearLayout>

         </LinearLayout>
      </androidx.cardview.widget.CardView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    >
    <androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:cardMaxElevation="2dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/txIssueNo"
                    android:layout_marginLeft="10dp"
                    android:text="Issue No : "
                    android:textColor="@color/colorOrange"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:drawablePadding="8dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/txIssueDate"
                    android:text="IssueDate : "
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:drawablePadding="8dp"
                    />

            </LinearLayout>


            <Space
                android:layout_width="15dp"
                android:layout_height="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
              >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txUser"
                    android:padding="10dp"
                    android:text="Issue By User : "
                    android:textColor="@color/colorPrimary"
                    android:textSize="13sp"
                    android:drawablePadding="8dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txSubject"
                    android:padding="10dp"
                    android:text="Subject : "
                    android:textColor="@color/colorPrimary"
                    android:textSize="13sp"
                    android:drawablePadding="8dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txIssue"
                    android:padding="10dp"
                    android:text="Issue Details : "
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:drawablePadding="8dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txStatus"
                    android:text="Status : "
                    android:padding="10dp"
                    android:background="@drawable/black_rect"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:drawablePadding="8dp"
                    />
            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>